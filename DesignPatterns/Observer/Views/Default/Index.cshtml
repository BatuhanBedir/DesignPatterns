@model RegisterVM
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br />
    <form method="post">
        <label>Adınız</label>
        <input type="text" asp-for="Name" class="form-control" />
        <br />
        <label>Soyadınız</label>
        <input type="text" asp-for="Surname" class="form-control" />
        <br />
        <label>İl</label>
        <input type="text" asp-for="City" class="form-control" />
        <br />
        <label>İlçe</label>
        <input type="text" asp-for="District" class="form-control" />
        <br />
        <label>Mail</label>
        <input type="text" asp-for="Email" class="form-control" />
        <br />
        <label>Kullanıcı Adı</label>
        <input type="text" asp-for="Username" class="form-control" />
        <br />
        <label>Şifre</label>
        <input type="text" asp-for="Password" class="form-control" />
        <br />

        <button class="btn btn-primary">Kayıt ol</button>
    </form>
</div>