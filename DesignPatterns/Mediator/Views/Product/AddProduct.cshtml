@model Mediator.MediatorPattern.Commands.CreateProductCommand
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <br />
    <form method="post">
        <br />
        <label>Ürün Adı</label>
        <input type="text" asp-for="Name" class="form-control" />
        <br />
        <label>Ürün Fiyatı</label>
        <input type="text" asp-for="Price" class="form-control" />
        <br />
        <label>Ürün Stok Türü</label>
        <input type="text" asp-for="StockType" class="form-control" />
        <br />
        <label>Ürün Stok</label>
        <input type="text" asp-for="Stock" class="form-control" />
        <br />
        <label>Ürün Kategori</label>
        <input type="text" asp-for="Category" class="form-control" />
        <br />
        <button class="btn btn-primary">Ekle</button>
    </form>
</div>

